<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".IncomeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout4">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Loan:"
                    android:id="@+id/textView"/>

            <Spinner
                    android:layout_width="150dp"
                    android:layout_height="37dp"
                    android:id="@+id/loanSpinner"
                    android:entries="@array/monthly_yearly"
                    android:layout_marginLeft="33dp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/loanAmount"
                    android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_marginTop="30dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Grant:"
                    android:id="@+id/textView2"/>

            <Spinner
                    android:layout_width="150dp"
                    android:layout_height="37dp"
                    android:id="@+id/grantSpinner"
                    android:layout_marginLeft="26dp"
                    android:entries="@array/monthly_yearly"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/grantAmount"
                    android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_marginTop="30dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Wage:"
                    android:id="@+id/textView3"/>

            <Spinner
                    android:layout_width="150dp"
                    android:layout_height="37dp"
                    android:id="@+id/wageSpinner"
                    android:layout_marginLeft="26dp"
                    android:entries="@array/weekly_monthly_yearly"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/wageAmount"
                    android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_marginTop="30dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Other:"
                    android:id="@+id/textView4"/>

            <Spinner
                    android:layout_width="150dp"
                    android:layout_height="37dp"
                    android:id="@+id/otherSpinner"
                    android:layout_marginLeft="30dp"
                    android:entries="@array/weekly_monthly_yearly"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/otherAmount"
                    android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Weekly Income: "
                    android:id="@+id/textView5"
                    android:layout_gravity="center"
                    android:layout_marginLeft="66dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/incomeWeeklyInc"
                    android:layout_gravity="center"/>
        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/incomeToExpenseButton"
                android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>
